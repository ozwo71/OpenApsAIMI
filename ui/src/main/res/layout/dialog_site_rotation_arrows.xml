<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
        <View
            android:layout_width="144dp"
            android:layout_height="144dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="?attr/toastBackgroundColor"/>

        <ImageView
            android:id="@+id/ic_up_right"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:foreground="@drawable/ic_up_right"/>

        <ImageView
            android:id="@+id/ic_up"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintTop_toTopOf="@id/ic_up_right"
            app:layout_constraintEnd_toStartOf="@id/ic_up_right"
            android:foreground="@drawable/ic_up"/>

        <ImageView
            android:id="@+id/ic_up_left"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintTop_toTopOf="@id/ic_up"
            app:layout_constraintEnd_toStartOf="@id/ic_up"
            android:background="@drawable/ic_up_left"/>

        <ImageView
            android:id="@+id/ic_right"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintEnd_toEndOf="@+id/ic_up_right"
            app:layout_constraintTop_toBottomOf="@+id/ic_up_right"
            android:background="@drawable/ic_right" />

        <ImageView
            android:id="@+id/ic_center"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintTop_toBottomOf="@id/ic_up_right"
            app:layout_constraintEnd_toStartOf="@id/ic_up_right"
            android:background="@drawable/ic_center"/>

        <ImageView
            android:id="@+id/ic_left"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintTop_toBottomOf="@id/ic_up_right"
            app:layout_constraintEnd_toStartOf="@id/ic_up"
            android:background="@drawable/ic_left"/>

        <ImageView
            android:id="@+id/ic_down_right"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintEnd_toEndOf="@+id/ic_up_right"
            app:layout_constraintTop_toBottomOf="@+id/ic_right"
            android:background="@drawable/ic_down_right" />

        <ImageView
            android:id="@+id/ic_down"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintEnd_toStartOf="@id/ic_up_right"
            app:layout_constraintTop_toBottomOf="@+id/ic_right"
            android:background="@drawable/ic_down" />

        <ImageView
            android:id="@+id/ic_down_left"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintEnd_toStartOf="@id/ic_up"
            app:layout_constraintTop_toBottomOf="@+id/ic_right"
            android:background="@drawable/ic_down_left" />


        <View
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintEnd_toEndOf="@+id/ic_up_right"
            app:layout_constraintTop_toBottomOf="@+id/ic_down_right"
            android:background="?attr/toastBackgroundColor"/>

        <ImageView
            android:id="@+id/ic_none"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintEnd_toEndOf="@+id/ic_up_right"
            app:layout_constraintTop_toBottomOf="@+id/ic_down_right"
            android:background="@drawable/ic_none" />

</androidx.constraintlayout.widget.ConstraintLayout>
