<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/front"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H, 3:8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/back"
        app:layout_constraintWidth_percent="0.50">


        <ImageView
            android:id="@+id/front_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:background="@drawable/man_front"
            android:visibility="visible" />

        <app.aaps.core.ui.elements.VectorHitTestImageView
            android:id="@+id/front_ru_chest"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/man_front_ru_chest"
            android:visibility="gone" />

        <app.aaps.core.ui.elements.VectorHitTestImageView
            android:id="@+id/front_lu_chest"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/man_front_lu_chest"
            android:visibility="gone" />

        <app.aaps.core.ui.elements.VectorHitTestImageView
            android:id="@+id/side_r_arm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/man_side_r_arm"
            android:visibility="gone" />

        <app.aaps.core.ui.elements.VectorHitTestImageView
            android:id="@+id/side_l_arm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/man_side_l_arm"
            android:visibility="gone" />

        <app.aaps.core.ui.elements.VectorHitTestImageView
            android:id="@+id/side_ru_abdomen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/man_side_ru_abdomen"
            android:visibility="gone" />

        <app.aaps.core.ui.elements.VectorHitTestImageView
            android:id="@+id/side_rl_abdomen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/man_side_rl_abdomen"
            android:visibility="gone" />

        <app.aaps.core.ui.elements.VectorHitTestImageView
            android:id="@+id/side_lu_abdomen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/man_side_lu_abdomen"
            android:visibility="gone" />

        <app.aaps.core.ui.elements.VectorHitTestImageView
            android:id="@+id/side_ll_abdomen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/man_side_ll_abdomen"
            android:visibility="gone" />

        <app.aaps.core.ui.elements.VectorHitTestImageView
            android:id="@+id/front_ru_abdomen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/man_front_ru_abdomen"
            android:visibility="gone" />

        <app.aaps.core.ui.elements.VectorHitTestImageView
            android:id="@+id/front_rl_abdomen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/man_front_rl_abdomen"
            android:visibility="gone" />

        <app.aaps.core.ui.elements.VectorHitTestImageView
            android:id="@+id/front_lu_abdomen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/man_front_lu_abdomen"
            android:visibility="gone" />

        <app.aaps.core.ui.elements.VectorHitTestImageView
            android:id="@+id/front_ll_abdomen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/man_front_ll_abdomen"
            android:visibility="gone" />

        <app.aaps.core.ui.elements.VectorHitTestImageView
            android:id="@+id/front_ru_thigh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/man_front_ru_thigh"
            android:visibility="gone" />

        <app.aaps.core.ui.elements.VectorHitTestImageView
            android:id="@+id/front_lu_thigh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/man_front_lu_thigh"
            android:visibility="gone" />

        <app.aaps.core.ui.elements.VectorHitTestImageView
            android:id="@+id/front_rl_thigh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/man_front_rl_thigh"
            android:visibility="gone" />

        <app.aaps.core.ui.elements.VectorHitTestImageView
            android:id="@+id/front_ll_thigh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/man_front_ll_thigh"
            android:visibility="gone" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/back"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H, 3:8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/front"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.50">


        <ImageView
            android:id="@+id/back_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:background="@drawable/man_back"
            android:visibility="visible" />

        <app.aaps.core.ui.elements.VectorHitTestImageView
            android:id="@+id/back_r_arm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/man_back_r_arm"
            android:visibility="gone" />

        <app.aaps.core.ui.elements.VectorHitTestImageView
            android:id="@+id/back_l_arm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/man_back_l_arm"
            android:visibility="gone" />

        <app.aaps.core.ui.elements.VectorHitTestImageView
            android:id="@+id/back_r_buttock"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/man_back_r_buttock"
            android:visibility="gone" />

        <app.aaps.core.ui.elements.VectorHitTestImageView
            android:id="@+id/back_l_buttock"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/man_back_l_buttock"
            android:visibility="gone" />

        <app.aaps.core.ui.elements.VectorHitTestImageView
            android:id="@+id/side_ru_thigh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/man_side_ru_thigh"
            android:visibility="gone" />

        <app.aaps.core.ui.elements.VectorHitTestImageView
            android:id="@+id/side_lu_thigh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/man_side_lu_thigh"
            android:visibility="gone" />

        <app.aaps.core.ui.elements.VectorHitTestImageView
            android:id="@+id/side_rl_thigh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/man_side_rl_thigh"
            android:visibility="gone" />

        <app.aaps.core.ui.elements.VectorHitTestImageView
            android:id="@+id/side_ll_thigh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/man_side_ll_thigh"
            android:visibility="gone" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
